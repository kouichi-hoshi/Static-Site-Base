    "postcss": "^8.4.16",
    "postcss-normalize-charset": "^5.1.0",
    "postcss-sort-media-queries": "^4.2.1",
    "sass": "^1.54.4",
    "vite": "^3.0.0",
    "vite-plugin-handlebars": "^1.6.0"
  },
  "browserslist": [
    "last 3 versions",
    "> 5%",
    "iOS >= 9.0",
    "Android >= 5",
    "Firefox ESR"
